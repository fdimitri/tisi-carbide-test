<p id="notice"><%= notice %></p>

<div class="ticketBox">
<h1>Listing Tickets</h1>

<table class="ticketList tablesorter">
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Assigned User</th>
      <th>Priority</th>
      <th>State</th>
      <th>OS</th>
      <th>Hardware</th>
      <th>Category</th>
      <th>Group</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.title, ticket %></td>
        <td><%= link_to ticket.User.userName, ticket.User %></td>
        <td><%= link_to ticket.AssignedUser.userName, ticket.AssignedUser %></td>
        <td><%= ticket.Priority.name %></td>
        <td><%= ticket.State.name %></td>
        <td><%= ticket.osdef.name %></td>
        <td><%= ticket.Hardware.name %></td>
        <td><%= ticket.TicketCategory.name %></td>
        <td><%= ticket.TicketGroup.name %></td>
        <td><%= ticket.created_at.strftime("%m/%d/%y") %></td>
        <td><%= ticket.updated_at.strftime("%m/%d/%y") %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="ticketLinks">
  <%= link_to 'New Ticket', new_ticket_path %>
</div>
</div>