<p id="notice"><%= notice %></p>

<h1>Listing Ticket Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ticket_groups.each do |ticket_group| %>
      <tr>
        <td><%= ticket_group.name %></td>
        <td><%= ticket_group.desc %></td>
        <td><%= ticket_group.User %></td>
        <td><%= link_to 'Show', ticket_group %></td>
        <td><%= link_to 'Edit', edit_ticket_group_path(ticket_group) %></td>
        <td><%= link_to 'Destroy', ticket_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

